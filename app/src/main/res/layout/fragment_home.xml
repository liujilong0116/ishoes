    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/left_state"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp" />

        <TextView
            android:id="@+id/right_state"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_state_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="5dp"
            android:text="未连接" />

        <com.iai.ishoes.battery.BatteryView
            android:id="@+id/battery_l"
            android:layout_width="38dp"
            android:layout_height="14dp"
            android:layout_below="@+id/tv_state_l"
            android:layout_alignEnd="@id/tv_state_l"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/battery_data_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_state_l"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/battery_l"
            android:text="0%" />

        <TextView
            android:id="@+id/tv_state_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/tv_state_l"
            android:text="未连接" />

        <com.iai.ishoes.battery.BatteryView
