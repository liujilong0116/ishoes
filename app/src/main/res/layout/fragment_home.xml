<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/today_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="30dp"
            android:text="今日活动量"
            android:textColor="#505050"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_step_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="步数"
            android:textColor="#505050"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_step_count"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_step_count_text"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#0092D8"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_step_count_text"
            android:layout_alignBottom="@+id/tv_step_count"
            android:layout_toEndOf="@+id/tv_step_count"
            android:gravity="center"
            android:text="步"
            android:textColor="#505050"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:text="距离"
            android:textColor="#505050"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_distance_text"
            android:layout_toStartOf="@+id/tv_kilometer"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#0092D8"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_distance_text"
            android:layout_alignBottom="@+id/tv_distance"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="公里"
            android:textColor="#505050"
            android:textSize="18sp" />
    </RelativeLayout>
